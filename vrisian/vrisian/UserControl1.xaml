<UserControl x:Class="vrisian.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vrisian"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer CanContentScroll="True" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TreeView Name="FileTree" SelectedItemChanged="FileTree_SelectedItemChanged">
                <TreeViewItem Name="FileTreeItem" Header=""/>
            </TreeView>
        </ScrollViewer>
    </Grid>
</UserControl>
